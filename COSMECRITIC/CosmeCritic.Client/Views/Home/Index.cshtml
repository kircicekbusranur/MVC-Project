@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/SiteLayout.cshtml";
}


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/slider1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/slider2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/slider3.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="box">
    <div class="container">
        <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
            <div class="site-title">
                <ul class="wrapper-arrows">
                    <li><i class="icon-517 prev" title="left arrow"></i></li>
                    <li><i class="icon-501 next" title="right arrow"></i></li>
                </ul>
                <div class="site-inside"><span>YÜKSEK PUANLI ÜRÜNLER</span></div>
            </div>
            <div class="row">
                <div class="tesla-carousel-items">
                    @foreach (var item in (List<CosmeCritic.Client.Models.Data.Urunler>)Session["YuksekPuanliUrunler"])
                    {
                        <div class="col-md-3 col-xs-6 ">
                            <div class="product">
                                <div class="product-cover">
                                    <div class="product-cover-hover"><span><a href="/Home/UrunDetay/@item.UrunAdi">Görüntüle</a></span></div>
                                    <img src="~/Images/slider1.png" alt="@item.UrunAdi" />
                                </div>
                                <div class="product-details">
                                    <h1><a href="/Home/UrunDetay/@item.UrunAdi"><font color="black">@item.UrunAdi</font></a></h1>
                                    <div class="product-price">
                                        <a href="#" class="sepeteAt" data-id="@item.UrunID"><i class="icon-257" title="Sepete Ekle"></i></a>
                                        <font color="black"> @item.UrunFiyati</font>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
